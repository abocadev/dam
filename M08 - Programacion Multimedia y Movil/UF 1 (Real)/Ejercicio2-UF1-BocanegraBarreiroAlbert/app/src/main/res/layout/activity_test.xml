<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <TextView
        android:id="@+id/HeaderScreenTest"
        android:layout_width="930dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/padding_regular"
        android:text="@string/HeaderScreenTest"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/HeaderScreenTest"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
                FIRST QUESTION
            -->
            <TextView
                android:id="@+id/question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_regular"
                android:text="@string/question1"/>

            <!--  PREGUNTA 1 - RESPUESTA A -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question1_a"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="WrongAnswerQuestion1"
                android:text="@string/question1_a"
                android:textColor="@color/white" />

            <!-- PREGUNTA 1 - RESPUESTA B - RESPUESTA CORRECTA-->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question1_b"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="CorrectAnswerQuestion1"
                android:text="@string/question1_b"
                android:textColor="@color/white" />

            <!-- PREGUNTA 1 - RESPUESTA C -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question1_c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="WrongAnswerQuestion1"
                android:text="@string/question1_c"
                android:textColor="@color/white" />


            <!--
                SECOND QUESTION
            -->
            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_regular"
                android:text="@string/question2"/>

            <!-- PREGUNTA 2 - RESPUESTA A -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question2_a"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="WrongAnswerQuestion2"
                android:text="@string/question2_a"
                android:textColor="@color/white" />

            <!-- PREGUNTA 2 - RESPUESTA B -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question2_b"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="WrongAnswerQuestion2"
                android:text="@string/question2_b"
                android:textColor="@color/white" />

            <!-- PREGUNTA 2 - RESPUESTA C - RESPUESTA CORRECTA -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question2_c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="CorrectAnswerQuestion2"
                android:text="@string/question2_c"
                android:textColor="@color/white" />


            <!--
                THIRD QUESTION
            -->
            <TextView
                android:id="@+id/question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_regular"
                android:text="@string/question3"/>

            <!-- PREGUNTA 2 - RESPUESTA A -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question3_a"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="WrongAnswerQuestion3"
                android:text="@string/question3_a"
                android:textColor="@color/white" />

            <!-- PREGUNTA 2 - RESPUESTA B -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question3_b"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="WrongAnswerQuestion3"
                android:text="@string/question3_b"
                android:textColor="@color/white" />

            <!-- PREGUNTA 2 - RESPUESTA C - RESPUESTA CORRECTA -->
            <Button
                tools:ignore="OnClick"
                android:id="@+id/question3_c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_200"
                android:onClick="CorrectAnswerQuestion3"
                android:text="@string/question3_c"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>