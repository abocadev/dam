<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:backgroundTint="#FFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/numbers7_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tam_font"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/number7"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="7" />

        <Button
            android:id="@+id/number8"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="8" />

        <Button
            android:id="@+id/number9"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numbers4_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/numbers7_9"
        android:layout_marginTop="@dimen/tam_font"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/number4"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="4" />

        <Button
            android:id="@+id/number5"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="5" />

        <Button
            android:id="@+id/number6"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"

            android:layout_marginLeft="@dimen/mrg_left"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numbers1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tam_font"
        app:layout_constraintTop_toBottomOf="@id/numbers4_6"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/number1"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="1" />

        <Button
            android:id="@+id/number2"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="2" />

        <Button
            android:id="@+id/number3"
            android:layout_width="@dimen/button_tam"
            android:layout_height="@dimen/button_tam"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/tam_font"
            android:layout_marginLeft="@dimen/mrg_left"
            android:text="3" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>